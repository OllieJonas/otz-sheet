{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": [ "dom", "es2015" ],
        "outDit": "dist",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "includes" : [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}